  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${workspaceFolder}\\server\\src\\index.ts",
      "args": [ "Wi-Fi" ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "console": "internalConsole",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug RPi",
      "address": "192.168.1.184",
      "port": 9229,
      "sourceMaps": true,
      "localRoot": "${workspaceRoot}/server",
      "remoteRoot": "/home/pi/home-lights/server",
      "outFiles": [
        "${workspaceRoot}/server/dist/**/*.js"
      ]
    }
  ]
}