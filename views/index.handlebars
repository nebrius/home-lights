<!DOCTYPE html>
<html>
<head>
  <title>Home Lights</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <link rel="stylesheet" type="text/css" href="style.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
  <link rel="shortcut icon" href="favicon.png" type="image/png">
  <script>
window.state = {
  power: {{power}},
  brightness: {{brightness}},
  animationType: "{{{animationType}}}",
  animationParameters: {
    rainbow: {
      rate: {{animationParameters.rainbow.rate}}
    },
    pulse: {
      rate: {{animationParameters.pulse.rate}},
      hue: {{animationParameters.pulse.hue}},
      saturation: {{animationParameters.pulse.saturation}}
    },
    wave: {
      rate: {{animationParameters.wave.rate}},
      waveHue: {{animationParameters.wave.waveHue}},
      foregroundHue: {{animationParameters.wave.foregroundHue}},
      backgroundHue: {{animationParameters.wave.backgroundHue}}
    },
    colorCycle: {
      rate: {{animationParameters.colorCycle.rate}}
    },
    solid: {
      hue: {{animationParameters.solid.hue}},
      saturation: {{animationParameters.solid.saturation}}
    }
  }
};
  </script>
</head>
<body>
  <div id="app"></div>
  <script src="./bundle.js"></script>
</body>
</html>
